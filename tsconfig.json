{
    "compilerOptions": {
      "module": "es6",
      "target": "es6",
      "allowSyntheticDefaultImports": false,
      "moduleResolution": "node",
      "maxNodeModuleJsDepth": 1,
      "baseUrl": "src",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "sourceMap": true,
      "outDir": "./dist/ts-build",
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
      "dist"
    ]
  }
